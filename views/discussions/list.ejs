<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> | MangaVerse</title>
  <link rel="stylesheet" href="/css/style2.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Bowlby+One+SC&family=DM+Mono:ital,wght@0,300;0,400;0,500;1,400&display=swap" rel="stylesheet">
</head>
<body>
  <%- include('../partials/navbar') %>
  
  <main class="main-content">
    <%- include('../partials/flash') %>
    
    <div class="container">
      
      <div class="discussion-top-bar">
        <div class="header-pill">
          <h1>POPULAR DISCUSSIONS</h1>
        </div>

       <div class="header-actions">
  
  <form action="/discussions" method="GET" class="inline-search">
    <div class="search-wrapper">
      <input 
        type="text" 
        name="search" 
        placeholder="Search topics..." 
        class="pill-input"
        value="<%= typeof search !== 'undefined' ? search : '' %>"
      >
      
      <% if (typeof search !== 'undefined' && search) { %>
        <a href="/discussions" class="clear-btn" title="Clear Search">
          <i class="fas fa-times"></i>
        </a>
      <% } else { %>
        <button type="submit" class="icon-btn">
          <i class="fas fa-search"></i>
        </button>
      <% } %>
    </div>
  </form>

  <% if (currentUser) { %>
    <a href="/discussions/create" class="btn btn-primary create-btn">
      <span>Create</span> <i class="fas fa-plus"></i>
    </a>
  <% } else { %>
    <a href="/auth/login" class="btn btn-outline create-btn">
      <span>Login</span>
    </a>
  <% } %>
</div>
      </div>

      <% if (threads.length > 0) { %>
        <div class="discussion-feed">
          <% threads.forEach(thread => { %>
            <article class="discussion-row">
              
              <div class="row-image">
                <div class="img-frame">
                  <img src="<%= thread.manga.coverImage %>" alt="<%= thread.manga.title %>">
                  <div class="screentone-overlay"></div>
                </div>
              </div>

              <div class="row-content">
                <div class="row-meta-top">
                  <span class="tag-manga"><%= thread.manga.title %></span>
                  <span class="tag-date"><i class="fas fa-clock"></i> <%= new Date(thread.createdAt).toLocaleDateString() %></span>
                </div>

                <h2 class="row-title">
                  <a href="/discussions/<%= thread._id %>"><%= thread.title %></a>
                </h2>

                <p class="row-excerpt"><%= thread.content.substring(0, 180) %>...</p>

                <div class="row-meta-bottom">
                  <div class="user-info">
                    <i class="fas fa-user-astronaut"></i> <span><%= thread.user.username %></span>
                  </div>
                  <div class="stats">
                    <span><i class="fas fa-eye"></i> <%= thread.views %></span>
                    <span><i class="fas fa-comment-alt"></i> <%= thread.replies.length %></span>
                  </div>
                </div>
                
                <div class="corner-accents"></div>
              </div>

            </article>
          <% }) %>
        </div>
      <% } else { %>
        <div class="empty-state-cyber">
          <div class="glitch-icon"><i class="fas fa-comments"></i></div>
          <h2>NO SIGNALS DETECTED</h2>
          <p>Be the first to transmit a frequency.</p>
          <% if (currentUser) { %>
            <a href="/discussions/create" class="btn btn-primary">Initialize Thread</a>
          <% } %>
        </div>
      <% } %>
    </div>
  </main>

  <%- include('../partials/footer') %>
  <script src="/js/main.js"></script>
</body>
</html>