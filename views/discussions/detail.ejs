<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= thread.title %> | MangaVerse</title>
  <link rel="stylesheet" href="/css/style2.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Bowlby+One+SC&family=DM+Mono:ital,wght@0,300;0,400;0,500;1,400&display=swap" rel="stylesheet">
</head>
<body>
  <%- include('../partials/navbar') %>
  
  <main class="main-content">
    <%- include('../partials/flash') %>
    
    <div class="container">
      
      <div class="thread-hero-grid">
        
        <div class="hero-image-card">
            <img src="<%= thread.manga.coverImage %>" alt="<%= thread.manga.title %>">
            <div class="screentone-overlay"></div> </div>

        <div class="hero-info-stack">
            
            <a href="/manga/<%= thread.manga._id %>" class="info-pill manga-pill">
                <i class="fas fa-book-open"></i> <%= thread.manga.title %>
            </a>

            <div class="info-pill title-pill">
                <h1><%= thread.title %></h1>
            </div>

            <div class="info-pill content-pill">
                <div class="pill-meta-header">
                    <span class="user-badge">
                        <i class="fas fa-user-astronaut"></i> <%= thread.user.username %>
                    </span>
                    <span class="date-badge">
                        <i class="fas fa-clock"></i> <%= new Date(thread.createdAt).toLocaleDateString() %>
                    </span>
                     <% if (currentUser && currentUser.id === thread.user._id.toString()) { %>
                        <form action="/discussions/<%= thread._id %>?_method=DELETE" method="POST" class="delete-form"
                            onsubmit="return confirm('Delete this thread?')">
                            <button type="submit" class="trash-btn"><i class="fas fa-trash"></i></button>
                        </form>
                    <% } %>
                </div>
                
                <div class="pill-body-text">
                    <%= thread.content %>
                </div>
                
                <div class="pill-stats">
                    <span><i class="fas fa-eye"></i> <%= thread.views %> Views</span>
                    <span><i class="fas fa-reply"></i> <%= thread.replies.length %> Replies</span>
                </div>
            </div>

        </div>
      </div>

      <div class="replies-container-pill">
        <div class="replies-header">
            <h3><i class="fas fa-comments"></i> ALL COMMUNICATIONS</h3>
        </div>

        <div class="replies-scroll-window">
            <% if (thread.replies.length > 0) { %>
                <% thread.replies.forEach(reply => { %>
                    <div class="reply-bubble">
                        <div class="reply-user">
                            <span class="r-avatar"><%= reply.user.username.charAt(0).toUpperCase() %></span>
                            <span class="r-name"><%= reply.user.username %></span>
                            <span class="r-date"><%= new Date(reply.createdAt).toLocaleDateString() %></span>
                        </div>
                        <div class="reply-text">
                            <%= reply.content %>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="empty-replies">
                    <p>No signals detected. Start the transmission.</p>
                </div>
            <% } %>
        </div>
      </div>

      <div class="reply-input-pill">
        <% if (currentUser) { %>
            <form action="/discussions/<%= thread._id %>/reply" method="POST" class="reply-flex-form">
                <div class="input-wrapper">
                    <i class="fas fa-pen-nib"></i>
                    <textarea name="content" placeholder="Enter your response protocol..." required></textarea>
                </div>
                <button type="submit" class="btn btn-primary send-btn">
                    SEND <i class="fas fa-paper-plane"></i>
                </button>
            </form>
        <% } else { %>
            <div class="login-prompt">
                <a href="/auth/login" class="btn btn-outline">Login to Reply</a>
            </div>
        <% } %>
      </div>

    </div>
  </main>

  <%- include('../partials/footer') %>
  <script src="/js/main.js"></script>
</body>
</html>